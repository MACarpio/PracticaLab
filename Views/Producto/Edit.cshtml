@model PracticaLab.Models.Producto

<div class="text-center">
    <h1 class="display-4">Formulario para la edicion de Productos</h1>

    <form asp-controller="Producto" asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control form-control-sm form-input" type="text" placeholder="Ingrese el nombre del producto" aria-label=".form-control-sm" />

        <label asp-for="Categoria" class="control-label"></label>
        <input asp-for="Categoria" class="form-control form-input" type="text" placeholder="Ingrese la categorÃ­a" aria-label=".form-control-sm"/>

        <label asp-for="Precio" class="control-label"></label>
        <input asp-for="Precio" class="form-control form-input" type="number" placeholder="Ingrese el precio" aria-label=".form-control-sm"/>

        <label asp-for="Descuento" class="control-label"></label>
        <input asp-for="Descuento" class="form-control form-input" type="number" placeholder="Ingrese el descuento" aria-label=".form-control-sm"/>

        <div class="form-group">
            <button type="submit" class="btn btn-crear">Actualizar</button> 
        </div>              
    </form>
    <div>
        <a class="btn-regresar" asp-action="Index">Regresar a la lista</a>
    </div>
    <h1>@ViewData["Message"]</h1>
</div>